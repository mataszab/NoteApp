<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNoteActivity">

    <EditText
        android:id="@+id/edNoteName"
        android:layout_width="404dp"
        android:layout_height="62dp"
        android:hint="@string/addNoteNameHint"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@+id/edNoteDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edNoteDesc"
        android:layout_width="404dp"
        android:layout_height="187dp"
        android:layout_marginBottom="36dp"
        android:hint="@string/addNoteTextHint"
        android:onClick="onBtnSaveAndCloseClick"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveAndClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSaveAndClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="268dp"
        android:onClick="onBtnAddClick"
        android:text="@string/addButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>